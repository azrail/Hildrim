# Routes
# This file defines all application routes (Higher priority routes first)
# ~~~~

# Home page


GET     /                                       Start.index
GET     /register/                    			Start.register
GET     /register/{mobile}/                     Start.register(mobile:'true')
GET     /u/                                     Application.index
GET     /m/                                   	Application.index(mobile:'true')
GET     /series/{media_id}/update/  			Application.updateSeries

GET     /series/{media_id}/{error}/{mobile}/  	Application.showSeries
GET     /series/{media_id}/checkinNextEpisode/{mobile}/  Application.checkinNextEpisode
GET     /series/{media_id}/season/{season}/episode/{episode}/{mobile}/  Application.showEpisode
GET     /series/{media_id}/checkinEpisode/season/{season}/episode/{episode}/{mobile}/ Application.checkinEpisode
GET     /auth                                   Application.authenticate
GET     /series/{media_id}/                     Application.showSeries
GET     /series/{media_id}/checkinNextEpisode/  Application.checkinNextEpisode

GET     /series/{media_id}/season/{season}/episode/{episode}/  Application.showEpisode
GET     /series/{media_id}/checkinEpisode/season/{season}/episode/{episode}/  Application.checkinEpisode
GET     /series/{media_id}/{error}/  			Application.showSeries
GET     /updatecc/  			Application.updateCheckinCount

# Ignore favicon requests
GET     /favicon.ico                            404

# Map static resources from the /app/public folder to the /public path
GET     /public/                                staticDir:public

# Import Secure routes
*       /                                       module:secure

# Catch all
*       /{controller}/{action}                  {controller}.{action}
